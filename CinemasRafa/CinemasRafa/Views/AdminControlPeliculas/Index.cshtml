@model IEnumerable<CinemasRafa.Models.Peliculas>

@{
    ViewData["Title"] = "Index";
}

<h1>Control Peliculas</h1>

<p class="mt-3">
    <a class="btn btn-primary" asp-controller="Peliculas"asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pegi)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pegi.EdadMin)
            </td>
            <td>
                <a class="btn btn-warning" asp-controller="Peliculas" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-secondary" asp-controller="Peliculas" asp-action="Details" asp-route-id="@item.Id">Info</a>
                <a class="btn btn-danger" asp-controller="Peliculas" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
