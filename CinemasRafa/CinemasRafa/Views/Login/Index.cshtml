@model CinemasRafa.Models.CuentaUsuario

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                <form class="login-form" method="get" asp-action="Login">
                    <div class="form-group">
                        <label class="text-uppercase">Username</label>
                        <input type="text" class="form-control" placeholder="" asp-for="Username">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-uppercase">Password</label>
                        <input type="password" class="form-control" placeholder="" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login"/>
                    </div>
                    <div class="container-fluid">
                        <div style="display: flex">
                            <p class="">¿Eres un profesor?</p>
                            <a href="WorkerDTOs/Create">Registrate</a>
                        </div>
                        <div style="display: flex">
                            <p class="">¿Eres un alumno?</p>
                            <a href="CustomerDTOs/Create">Registrate</a>
                        </div>
                    </div>
                    <div>
                        <a href="Recuperaciones">¿Has olvidado la contrasña?</a>
                    </div>

                    <div style="color: red">
                    @if (TempData["errorMessage"] != null)
                    {
                        <p>@TempData["errorMessage"]</p>
                    }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>